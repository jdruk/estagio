<p id="notice"><%= notice %></p>

<h1>Listing Group Permissions</h1>

<table>
  <thead>
    <tr>
      <th>User group</th>
      <th>Segment</th>
      <th>Permission</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @group_permissions.each do |group_permission| %>
      <tr>
        <td><%= group_permission.user_group %></td>
        <td><%= group_permission.segment %></td>
        <td><%= group_permission.permission %></td>
        <td><%= link_to 'Show', group_permission %></td>
        <td><%= link_to 'Edit', edit_group_permission_path(group_permission) %></td>
        <td><%= link_to 'Destroy', group_permission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

