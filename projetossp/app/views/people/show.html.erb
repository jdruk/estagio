<div class='ui padded center aligned teal  segment show'>
  <p>
    <%= image_tag(@person.photo_url(:pic), class: 'ui centered large image') if @person.photo? %>
    <h2 class="ui header">
      <%= @person.name %>
    </h2>
    <strong>Gender:</strong>
    <%= @person.gender %>
  </p>
  
  <p>
    <strong>Rg:</strong>
    <%= @person.rg %>
  </p>
  
  <p>
    <strong>Cpf:</strong>
    <%= @person.cpf %>
  </p>
  
  <p>
    <strong>Phone:</strong>
    <%= @person.phone %>
  </p>
  
  <p>
    <strong>Cell phone:</strong>
    <%= @person.cell_phone %>
  </p>
  
  <%= link_to 'Edit', edit_person_path(@person), class: 'ui button' %> 
  <%= link_to 'Back', people_path, class: 'ui button' %>
  
</div>
